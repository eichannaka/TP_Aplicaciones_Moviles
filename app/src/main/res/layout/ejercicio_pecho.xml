<?xml version="1.0" encoding="utf-8"?>
        <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#BD5C5C"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">



        <!-- TextView -->
        <TextView
            android:id="@+id/idTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="@string/logo"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <!-- ImageView -->
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />

        <ImageButton
            android:id="@+id/id_btn_back_button"
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:background="@color/header"
            android:scaleType="centerCrop"
            android:src="@drawable/back_button" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


        <LinearLayout
            android:id="@+id/layout_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Rutina 1: Flexiones de brazos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Flexiones de brazos"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Acuéstate boca abajo, con las palmas de las manos apoyadas en el suelo a la altura de los hombros y los pies juntos."
                    android:textSize="14sp" />

                <!-- Puedes agregar más detalles como repeticiones, series, etc. -->

            </LinearLayout>

            <!-- Rutina 2: Press de banca -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Press de banca"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Puedes agregar más detalles como repeticiones, series, etc. -->

            </LinearLayout>

            <!-- Rutina 3: Aperturas con mancuernas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Aperturas con mancuernas"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Acuéstate en un banco plano con una mancuerna en cada mano, extendidos hacia arriba con los brazos ligeramente flexionados."
                    android:textSize="14sp" />

                <!-- Puedes agregar más detalles como repeticiones, series, etc. -->

            </LinearLayout>

            <!-- Rutina 4: Flexiones diamante -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Flexiones diamante"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Realiza flexiones con las manos juntas formando un diamante debajo de tu pecho."
                    android:textSize="14sp" />

                <!-- Puedes agregar más detalles como repeticiones, series, etc. -->

            </LinearLayout>

            <!-- Rutina 5: Pull-over con mancuerna -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Pull-over con mancuerna"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Acuéstate en un banco con una mancuerna sobre tu pecho y extiende los brazos hacia atrás manteniendo un ligero doblez en los codos."
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Acuéstate en un banco plano con una barra o mancuernas sostenidas por encima del pecho."
                    android:textSize="14sp" />

                <!-- Puedes agregar más detalles como repeticiones, series, etc. -->

            </LinearLayout>
            <!-- Rutina 6: Aperturas inclinadas con mancuernas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Aperturas inclinadas con mancuernas"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Realiza aperturas con mancuernas en un banco inclinado, elevando las mancuernas desde el centro del pecho hacia afuera."
                    android:textSize="14sp" />

                <!-- Puedes agregar más detalles como repeticiones, series, etc. -->

            </LinearLayout>
            <!-- Rutina 7: Flexiones en declive -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Flexiones en declive"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Coloca tus pies en un punto elevado (banco, silla) y realiza flexiones para enfocar más el trabajo en la parte superior del pecho."
                    android:textSize="14sp" />

                <!-- Puedes agregar más detalles como repeticiones, series, etc. -->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
